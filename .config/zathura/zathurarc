set font                        "Sarasa UI HC"
set default-bg                  "#2a2f33" #00
set default-fg                  "#bfddb2" #01

set statusbar-fg                "#bfddb2" #04
set statusbar-bg                "#2a2f33" #01

set inputbar-bg                 "#2a2f33" #00 currently not used
set inputbar-fg                 "#bfddb2" #02

set notification-error-bg       "#2a2f33" #08
set notification-error-fg       "#cc241d" #00

set notification-warning-bg     "#2a2f33" #08
set notification-warning-fg     "#d79921" #00

set highlight-color             "#2a2f33" #0A
set highlight-active-color      "#bfddb2" #0D

ret completion-highlight-fg     "#31363b" #02
set completion-highlight-bg     "#87afaf" #0C

set completion-bg               "#31363b" #02
set completion-fg               "#bfddb2" #0C

set notification-bg             "#2a2f33" #0B
set notification-fg             "#458588" #00

set recolor-lightcolor          "#2a2f33" #00
set recolor-darkcolor           "#bfddb2" #06
set recolor                     "true"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue "false"

set selection-clipboard "clipboard"

# keybindings
map [fullscreen] a adjust_window best-fit
map [fullscreen] s adjust_window width
map [fullscreen] f follow
map [fullscreen] <Tab> toggle_index
map [fullscreen] j scroll down
map [fullscreen] k scroll up
map [fullscreen] h navigate previous
map [fullscreen] l navigate next
