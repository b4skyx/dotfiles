#!/bin/sh
# Applications
~/.config/conky/start-conky.sh &
firefox --class="init_firefox" &

pgrep redshift || redshift &
pgrep mpd || mpd &
pgrep mpd-mpris || mpd-mpris &
pgrep bspswallow || bspswallow &

xautolock -detectsleep -time 10 -locker "~/Dotfiles/scripts/lock.sh" -notify 30 -notifier "notify-send -u critical -t 10000 -- 'LOCKING screen in 30 seconds'" &
